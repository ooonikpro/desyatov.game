{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "target": "es2017",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noEmit": true,
    "paths": {
      "@app": ["./src/app/index.ts"],
      "@utils/*": ["./src/utils/*"],
      "@modules/*": ["./src/modules/*"],
      "@plugins/*": ["./src/plugins/*"],
      "@configs": ["./src/configs/index.ts"],
      "@types": ["./src/types/index.ts"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
